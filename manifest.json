{
"update_url": "https://clients2.google.com/service/update2/crx",

"options_ui": {
  "page": "options.html",
  "open_in_tab": true
},

  "manifest_version": 3,
  "name": "CalendarCapture",
  "version": "2.1",
  "description": "Capture screen text and add to Google Calendar.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "CalendarCapture",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "start-capture": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Start screen capture"
    }
  }
}